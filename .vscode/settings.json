{
	"editor.detectIndentation": false,
	"editor.insertSpaces": false,
	"editor.tabSize": 4,
	"editor.autoIndent": "full",
	"editor.formatOnSave": true,
	"C_Cpp.clang_format_style": "{ BasedOnStyle: Google, UseTab: ForIndentation, IndentWidth: 4, TabWidth: 4, IncludeBlocks: Preserve, ColumnLimit: 0, SortIncludes: false}",
	"search.exclude": {
		"dependencies": true,
	},
	"telemetry.enableTelemetry": false,
	"cmake.buildDirectory": "${workspaceFolder}/build",
	"cmake.configureArgs": [
		"-DEQEMU_BUILD_LOGIN=ON",
		"-DEQEMU_BUILD_LUA=ON",
		"Unix Makefiles"
	],
	"testMate.cpp.test.executables": "{build,Build,BUILD,out,Out,OUT}/**/*{test,Test,TEST}*",
	"cmake.configureOnOpen": false,
	"files.associations": {
		"*.ipp": "cpp",
		"functional": "cpp"
	},
}